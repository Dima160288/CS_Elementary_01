<Window x:Class="Common.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Common"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="345*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="72*"/>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="61*"/>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="54*"/>
            <ColumnDefinition Width="92*"/>
        </Grid.ColumnDefinitions>
        <DataGrid x:Name="DG" Grid.ColumnSpan="8" HorizontalAlignment="Left" Height="256" Margin="38,82,0,0" VerticalAlignment="Top" Width="689"/>
        <Button x:Name="btnExit" Content="Выход" HorizontalAlignment="Left" Height="29" Margin="10,364,0,0" VerticalAlignment="Top" Width="71" Click="btnExit_Click" Grid.ColumnSpan="2" Grid.Column="6"/>
        <Button x:Name="btnAdd" Content="Добавить в корзину" HorizontalAlignment="Left" Height="25" Margin="38,40,0,0" VerticalAlignment="Top" Width="139" Click="btnAdd_Click"/>
        <Button Grid.ColumnSpan="3" Grid.Column="5" HorizontalAlignment="Left" Height="25" Margin="86,40,0,0" VerticalAlignment="Top" Width="134" Click="Button_Click">
            <Button Content="Корзина" Width="75"/>
        </Button>

    </Grid>
</Window>
